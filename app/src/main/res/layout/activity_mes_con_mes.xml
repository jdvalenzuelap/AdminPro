<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MesConMes">

    <EditText
        android:id="@+id/textVentas"
        android:layout_width="243dp"
        android:layout_height="48dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="173dp"
        android:layout_marginBottom="266dp"
        android:ems="10"
        android:hint="Ventas Mensuales Esperadas"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/btn_Regresar2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textCostos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="23dp"
        android:ems="10"
        android:hint="Costos Mensuales"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/textDepre"
        app:layout_constraintStart_toStartOf="@+id/textVentas"
        app:layout_constraintTop_toBottomOf="@+id/textVentas" />

    <EditText
        android:id="@+id/textDepre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="388dp"
        android:ems="10"
        android:hint="DepreciaciÃ³n de Activos"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textCostos"
        app:layout_constraintTop_toBottomOf="@+id/textCostos" />

    <Button
        android:id="@+id/btn_Regresar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="16dp"
        android:onClick="back"
        android:text="Regresar"
        app:layout_constraintBottom_toTopOf="@+id/btn_Continuar2"
        app:layout_constraintStart_toStartOf="@+id/btn_Continuar2"
        app:layout_constraintTop_toBottomOf="@+id/textVentas" />

    <Button
        android:id="@+id/btn_Continuar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="137dp"
        android:onClick="next"
        android:text="Continuar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_Regresar2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="128dp"
        android:text="Mes Con Mes"
        app:layout_constraintBottom_toTopOf="@+id/textVentas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>